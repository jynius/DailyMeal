{
  "name": "dailymeal-workspace",
  "version": "1.0.0",
  "description": "DailyMeal 풀스택 애플리케이션",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:pm2": "./bin/start-pm2.sh",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build:all": "cd frontend && npm run build && cd ../backend && npm run build",
    "deploy": "./bin/deploy.sh",
    "setup": "./bin/dev-setup.sh",
    "stop": "./bin/stop-pm2.sh all",
    "stop:dev": "./bin/stop-pm2.sh dev",
    "stop:prod": "./bin/stop-pm2.sh prod",
    "lint:all": "cd frontend && npm run lint && cd ../backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
